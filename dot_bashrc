#
# ~/.bashrc
#

# If not running interactively, don't do anything
[[ $- != *i* ]] && return

export EDITOR=nvim

# Git
alias ga="git add"
alias gs="git status"
alias gc="git commit"

alias hx="helix"
alias ls='ls --color=auto'
alias grep='grep --color=auto'
PS1='[\u@\h \W]\$ '

alias vim="nvim"
alias pacman-clean="pacman -Qtdq | sudo pacman -Rns -"

eval "$(zoxide init bash)"
eval "$(/usr/bin/mise activate bash)"

